<Window
    x:Class="CapApp.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:CapApp.ViewModels"
    xmlns:wc="https://github.com/naminodarie/WindowCapture"
    Width="600"
    Height="200"
    MinWidth="360"
    MinHeight="120"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    d:DesignHeight="200"
    d:DesignWidth="400"
    dd:DragDrop.DropEventType="Bubbled"
    dd:DragDrop.DropHandler="{Binding DropHandler}"
    dd:DragDrop.IsDropTarget="True"
    wc:IocBehavior.AutoViewModel="{x:Type vm:MainWindowViewModel}"
    Background="AliceBlue"
    mc:Ignorable="d">

    <wc:WindowCapturer
        ExpandSizeChanged="WindowCapturer_ExpandSizeChanged"
        AlwaysImageArea="False"
        ImageWidth="65"
        ListHeight="70">
        <StackPanel Background="AliceBlue" SizeChanged="StackPanel_SizeChanged">
            <Button Command="{Binding AddCommand}" Content="ダミー画像" />
            <Button Command="{Binding ClearCommand}" Content="クリア" />
            <TextBlock Text="hoge" />
        </StackPanel>
    </wc:WindowCapturer>
</Window>
