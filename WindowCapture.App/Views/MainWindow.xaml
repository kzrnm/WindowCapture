<Window
    x:Class="CapApp.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:CapApp.ViewModels"
    xmlns:wc="https://github.com/naminodarie/WindowCapture"
    Width="400"
    Height="300"
    MinWidth="360"
    MinHeight="120"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    d:DesignHeight="200"
    d:DesignWidth="400"
    dd:DragDrop.DropEventType="Bubbled"
    dd:DragDrop.DropHandler="{Binding DropHandler}"
    dd:DragDrop.IsDropTarget="True"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <wc:WindowCapturer
        AlwaysImageArea="True"
        ExpandSizeChanged="WindowCapturer_ExpandSizeChanged"
        ImageWidth="65"
        ListHeight="70" />
</Window>
