<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Kzrnm.WindowCapture.Views"
    xmlns:prism="http://prismlibrary.com/">

    <Style x:Key="ImageVisible" TargetType="FrameworkElement">
        <Style.Triggers>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding HasImage}" Value="False" />
                    <Condition Binding="{Binding AlwaysImageArea, RelativeSource={RelativeSource AncestorType=local:WindowCapturer}}" Value="False" />
                </MultiDataTrigger.Conditions>
                <Setter Property="Visibility" Value="Collapsed" />
            </MultiDataTrigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="{x:Type local:WindowCapturer}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WindowCapturer}">
                    <DockPanel x:Name="PART_Root">
                        <ContentControl
                            x:Name="PART_Content"
                            prism:RegionManager.RegionName="ContentRegion"
                            Focusable="False" />
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>